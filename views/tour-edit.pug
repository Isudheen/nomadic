extends base

block content
 .user-view__content
  .user-view__form-container
    h2.heading-secondary.ma-bt-md Edit Tour
    form.form-tour-data
     .form__group 
      label.form__label(for='name') Tour Name 
      input#tour-name.form__input(type='text', value=`${tour.name}`, name='name')
     .form__group 
      label.form__label(for='price') Price
      input#tour-price.form__input(type='text', value=`${tour.price}`, name='price')
     .form__group 
      label.form__label(for='duration') Duration 
      input#tour-duration.form__input(type='text', value=`${tour.duration}`, name='duration')
     .form__group 
      label.form__label(for='difficulty') Difficulty 
      input#tour-difficulty.form__input(type='text', value=`${tour.difficulty}`, name='difficulty')
     .form__group 
      label.form__label(for='size') Max Group Size
      input#tour-size.form__input(type='text', value=`${tour.maxGroupSize}`, name='size')
     .form__group 
      label.form__label(for='summary') Summary 
      input#tour-summary.form__input(type='text', value=`${tour.summary}`, name='summary')
     .form__group 
      label.form__label(for='description') Description 
      input#tour-description.form__input(type='text', value=`${tour.description}`, name='description')
     .form__group 
      label.form__label(for='slug') Slug 
      input#tour-slug.form__input(type='text', value=`${tour.slug}`, name='slug')
      .tour_id #{`Tour id : ${tour.id}`}
     .form__group.right
       button.btn.btn--small.btn--blue Update Tour
     
